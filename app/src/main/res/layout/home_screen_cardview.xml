<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_card_height">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_home_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/min_margin_from_start_end"
        android:layout_marginEnd="@dimen/min_margin_from_start_end"
        android:layout_marginTop="@dimen/home_margin_cards_next_days"
        app:cardBackgroundColor="@color/home_screen_card"
        app:cardCornerRadius="@dimen/corner_radius"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="18dp"
            android:layout_gravity="top"
            >
            <FrameLayout
                android:id="@+id/home_top_left_frame"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3">

                <TextView
                    android:id="@+id/day_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/today"
                    android:textColor="@color/white"
                    android:textSize="@dimen/home_parameters_text_size"
                    android:textStyle="bold"
                    />

            <TextView
                android:id="@+id/date_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10/09"
                android:textColor="@color/white"
                android:layout_marginTop="24dp"
                android:textSize="@dimen/home_sub_parameters_text_size"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/home_top_center_frame"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/min_degrees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22°"
                    android:textColor="@color/white"
                    android:textSize="@dimen/home_parameters_text_size"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="min"
                    android:textColor="@color/white"
                    android:layout_marginTop="24dp"
                    android:textSize="@dimen/home_sub_parameters_text_size"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/home_top_right_frame"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7">

                <TextView
                    android:id="@+id/max_degrees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="31°"
                    android:textSize="@dimen/home_parameters_text_size"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="max"
                    android:textColor="@color/white"
                    android:layout_marginTop="24dp"
                    android:textSize="@dimen/home_sub_parameters_text_size"/>
            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="18dp"
            android:layout_gravity="bottom">


            <FrameLayout
                android:id="@+id/home_bottom_left_frame"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3">

                <ImageView
                    android:id="@+id/icon_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sunny_icon"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/home_bottom_center_frame"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/rain_perc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textSize="@dimen/home_parameters_text_size"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/precip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="precip."
                    android:textColor="@color/white"
                    android:layout_marginTop="24dp"
                    android:textSize="@dimen/home_sub_parameters_text_size"/>/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/home_bottom_right_frame"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7">

                <TextView
                    android:id="@+id/wind_kmh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12kmh"
                    android:textColor="@color/white"
                    android:textSize="@dimen/home_parameters_text_size"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="vento"
                    android:textColor="@color/white"
                    android:layout_marginTop="24dp"
                    android:textSize="@dimen/home_sub_parameters_text_size"/>/>
            </FrameLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Today_screen">

    <TextView
        android:id="@+id/city_region_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/detailed_forecast_city_margin_top"
        android:layout_marginStart="@dimen/min_margin_from_start_end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        tools:text="Palermo, Sicily"
        tools:textSize="@dimen/detailed_forecast_min_text_size"/>

    <TextView
        android:id="@+id/tomorrow_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/detailed_forecast_date_margin_top"
        android:layout_marginStart="@dimen/min_margin_from_start_end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        tools:text="Tomorrow,\nMonday 11 september"
        tools:textSize="@dimen/detailed_forecast_max_text_size" />

    <!--TODO change margin bottom -->
    <androidx.cardview.widget.CardView
        android:id="@+id/details_card_view"
        android:layout_width="@dimen/detailed_forecast_card_width"
        android:layout_height="@dimen/detailed_forecast_card_height"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        tools:backgroundTint="#00ff00"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hours_recycler_view"
        android:layout_width="@dimen/detailed_forecast_card_width"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_card_view" />

</androidx.constraintlayout.widget.ConstraintLayout>